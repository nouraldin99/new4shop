<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">5dp</item>


    </style>
<style name="EditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:imeOptions">actionNext</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:padding">5dp</item>

</style>
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">41dp</item>
        <item name="android:background">@drawable/start_buton</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/md_white</item>
        <item name="android:textSize">17sp</item>

    </style>
    <style name="Logo_Image">
        <item name="android:layout_width">103dp</item>

        <item name="android:layout_height">103dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/logo</item>

    </style>
    <style name="ccp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="imageButon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/categories_img</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="show_more">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/show_more</item>
        <item name="android:text">Show More</item>
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>
