<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="511dp"
        android:layout_marginTop="@dimen/_20sdp"


        ></androidx.viewpager.widget.ViewPager>

    <com.luciferldy.viewpagerindicator.ViewPagerIndicator
        android:id="@+id/indecator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:indicator_count="4"
        app:indicator_normal_color="#707070"
        app:indicator_selected_color="#393939" />

    <Button
        android:id="@+id/email_log_button_main"
        android:layout_width="@dimen/_248sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_56sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_61sdp"
        android:layout_marginBottom="@dimen/_61sdp"
        android:background="@drawable/start_buton"
        android:text="Start"
        android:textSize="17sp"
        android:textColor="@color/md_white"
        android:src="@drawable/shape"

        android:textAlignment="center" />

</LinearLayout>
</ScrollView>