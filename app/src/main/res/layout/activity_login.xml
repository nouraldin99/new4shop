<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activites.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:visibility="invisible"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/sign_in"
                android:textColor="#393939"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView2"
                style="@style/TextView"
                android:layout_marginTop="41dp"
                android:text="Email" />

            <EditText
                android:id="@+id/email_et"
                style="@style/EditText"
                android:layout_marginTop="0dp"
                android:ems="20"
                android:textColor="@color/black"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView4"
                style="@style/TextView"
                android:layout_marginTop="45dp"
                android:text="Password"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pass_et"
                style="@style/EditText"
                android:ems="20"
                android:imeOptions="actionDone"
                android:textColor="@color/black"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="137dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:text="Remember me"
                    android:textColorHighlight="@color/colorAccent" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="163dp"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Forgot your password?"
                    android:textColor="#F46B49"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Already have account?"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/login_singup_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sign up"
                    android:textColor="#F46B49"
                    android:textSize="15sp"
                    android:textStyle="" />
            </LinearLayout>

            <Button
                android:id="@+id/email_log_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="41dp"
                android:background="@drawable/start_buton"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="@color/md_white"
                android:textSize="17sp" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/fb_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="157dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="156dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_log_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="OR"
                android:textColor="#9BAED4"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/fb_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/facebook" />

            <!--        <ImageView-->
            <!--            android:id="@+id/imageView2"-->
            <!--            android:layout_width="7dp"-->
            <!--            android:layout_height="44dp"-->
            <!--            app:srcCompat="@drawable/fb" />-->


        </LinearLayout>
    </LinearLayout>
</ScrollView>